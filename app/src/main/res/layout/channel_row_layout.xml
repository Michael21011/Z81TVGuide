<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/channellogo"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:onClick="onChannelLogoClick"
        android:clickable="true"
         >
    </ImageView>
    <TextView
        android:id="@+id/channelId"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
         android:visibility="invisible"
        android:gravity="center_vertical"
        android:layout_weight="0"
         >
    </TextView>

    <TextView
        android:id="@+id/channel"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/accent_material_light"
        android:backgroundTintMode="multiply"
        android:gravity="center_vertical"
        android:text="@+id/label"
        android:textColor="@color/ChannelNameNow"
        android:textSize="24sp"
        android:visibility="visible"></TextView>

    <TextView
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/common_signin_btn_default_background"
        android:backgroundTintMode="multiply"
        android:text=" "
        android:textSize="2sp"
        android:visibility="visible"></TextView>
    <TextView
        android:id="@+id/numberDigital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" "
        android:onClick="onNumberDigitalClick"
        android:clickable="true"
        android:textSize="24sp"
        android:visibility="visible" >
    </TextView>
    <TextView
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" "
        android:textSize="2sp"
        android:visibility="visible" >
    </TextView>

    <ImageView
        android:id="@+id/star"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:onClick="onStarClick"
        android:clickable="true"
       >
    </ImageView>

</LinearLayout>
